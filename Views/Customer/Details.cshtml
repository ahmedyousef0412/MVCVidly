@model Vidly.Models.Customer
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>
        <h3>MemberShipType  : @Model.MemberShipType.Name</h3> 
    </li>
    @if (Model.BirthDate.HasValue)
    {
        <li>
            <h3>BirthDate : @Model.BirthDate.Value.ToShortDateString()</h3>  
        </li>
    }
   
</ul>