@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<br />

<br />

<table class="table table-bordered table-hover " id="movie">

    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
          
        </tr>
    </thead>


</table>

@section scripts
{
    <script>


        $(document).ready(function () {

           var table =  $("#movie").DataTable({

                ajax: {

                    url: "/api/Movie/",
                    dataSrc :""
                },
                columns: [

                    {
                        data: "name"
                       
                    },
                    {
                        data: "genre.name"

                    },
             

                ]



            });
            
        });




    </script>

}




